<h2>Signup</h2>

<form action="/auth/signup" method="POST" id="form-container" enctype="multipart/form-data">
  <label for="username">Username</label>
  <input id="username" type="text" name="username" placeholder="Nombre de usuario">

  <br><br>

  <label for="email">Email</label>
  <input type="text" name="email" placeholder="Introduce un email">

  <br><br>

  <label for="password">Password:</label>
  <input id="password" type="password" name="password" placeholder="Contrasenia">
  <br>
  {{#if message }}
    <div class="error-message">{{ message }}</div>
  {{/if}}

  <br><br>

  <label for="picture">Profile image</label>
  <input type="file" name="picture">

  <br><br>

  <button>Create</button>

  <p class="account-message">
    Do you already have an account?
    <a href="/auth/login">Login</a>
  </p>
</form>

