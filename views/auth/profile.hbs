
<h1>{{user.username}}</h1>
<img src="{{user.picture}}" id="profilePic" ></img>

<a href="/card/new-card">Nueva card</a>
<a href="/profile/edit">Editar</a>


<div class="container">
  <h1>Cards</h1>
  <div class="row">
    {{#each cards}}

    {{>profileGridPartials this}}

    {{/each}}

  </div>
</div>

<div class="container">
  <h1>Favorites</h1>
  <div class="row">
    {{#each cardsFav}}

    {{>profileGridPartials this}}

    {{/each}}

  </div>
  {{#each suggestions}}

    <a href="/profile/{{_id}}">{{username}}</a>

    {{/each}}
</div>
